@page
@model ManageModel
@{
    ViewData["Title"] = "Adicionar funções";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Utilizadores</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-page="./Index" role="button" class="btn btn-sm btn-outline-secondary">
                <span class="btn-label"><i class="fa fa-rotate-left"></i></span> Voltar
            </a>
        </div>

    </div>
</div>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-6">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <h2>Roles do utilizador</h2>
                        Adicionar/Remover Roles para o utilizador: <b>@Model.CurrentUser.UserName.</b>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="@Model.CurrentUser.Id" />
                        @for (int i = 0; i < Model.UserRoles.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.UserRoles[i].RoleId" />
                                <input type="hidden" asp-for="@Model.UserRoles[i].RoleName" />
                                <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model.UserRoles[i].Selected">
                                    @Model.UserRoles[i].RoleName
                                </label>
                            </div>
                        }
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" value="" class="btn btn-sm btn-success"
                                style="width:auto">
                            <span class="btn-label"><i class="fa fa-plus"></i></span> Gravar
                        </button>
                        <a asp-page="./Index" class="btn btn-sm btn-danger">
                            <span class="btn-label"><i class="fa fa-rotate-left"></i></span> Cancelar
                        </a>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>