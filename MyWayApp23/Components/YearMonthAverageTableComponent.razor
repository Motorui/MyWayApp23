<MudTable Items="@Items" Dense="true" Hover="true" Bordered="true"
          Striped="true" Loading="IsVisible" RowsPerPage="31" FixedHeader="true" Height="400px">
    <ToolBarContent>

        <MudText>
            @HeaderText
        </MudText>

    </ToolBarContent>
    <HeaderContent>
        <MudTh Style="white-space: nowrap;">Mês</MudTh>
        <MudTh Style="white-space: nowrap;">Seg</MudTh>
        <MudTh Style="white-space: nowrap;">Ter</MudTh>
        <MudTh Style="white-space: nowrap;">Qua</MudTh>
        <MudTh Style="white-space: nowrap;">Qui</MudTh>
        <MudTh Style="white-space: nowrap;">Sex</MudTh>
        <MudTh Style="white-space: nowrap;">Sab</MudTh>
        <MudTh Style="white-space: nowrap;">Dom</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd Style="white-space: nowrap;" DataLabel="Mês">@context.Mes</MudTd>
        <MudTd Style="white-space: nowrap;" DataLabel="Seg">@context.Seg</MudTd>
        <MudTd Style="white-space: nowrap;" DataLabel="Ter">@context.Ter</MudTd>
        <MudTd Style="white-space: nowrap;" DataLabel="Qua">@context.Qua</MudTd>
        <MudTd Style="white-space: nowrap;" DataLabel="Qui">@context.Qui</MudTd>
        <MudTd Style="white-space: nowrap;" DataLabel="Sex">@context.Sex</MudTd>
        <MudTd Style="white-space: nowrap;" DataLabel="Sab">@context.Sab</MudTd>
        <MudTd Style="white-space: nowrap;" DataLabel="Dom">@context.Dom</MudTd>
    </RowTemplate>
</MudTable>

@code {
    [Parameter]
    public List<HistoricoAverage> Items { get; set; } = new List<HistoricoAverage>();
    [Parameter]
    public bool IsVisible { get; set; }
    [Parameter]
    public string HeaderText { get; set; } = string.Empty;
}
